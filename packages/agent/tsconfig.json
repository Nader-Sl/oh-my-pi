{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"$agent/*": ["./src/*"],
			"$ai/*": ["../ai/src/*"],
			"$c/*": ["../coding-agent/src/*"],
			"$tui/*": ["../tui/src/*"],
			"$stats/*": ["../omp-stats/src/*"],
			"@oh-my-pi/pi-agent-core": ["./src/index.ts"],
			"@oh-my-pi/pi-agent-core/*": ["./src/*"],
			"@oh-my-pi/pi-ai": ["../ai/src/index.ts"],
			"@oh-my-pi/pi-ai/*": ["../ai/src/*"],
			"@oh-my-pi/pi-utils": ["../pi-utils/src/index.ts"],
			"@oh-my-pi/pi-utils/*": ["../pi-utils/src/*"],
			"@oh-my-pi/pi-coding-agent": ["../coding-agent/src/index.ts"],
			"@oh-my-pi/pi-coding-agent/*": ["../coding-agent/src/*"],
			"@oh-my-pi/pi-tui": ["../tui/src/index.ts"],
			"@oh-my-pi/pi-tui/*": ["../tui/src/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
